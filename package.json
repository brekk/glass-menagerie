{
  "name": "glass-menagerie",
  "version": "1.0.1",
  "description": "A toolset for generating pug / jade output from jsx",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && npm run build",
    "test-es6": "ava",
    "test-core": "npm run transpile && npm run test-es6",
    "test-log": "npm run test-core > test-output.log",
    "cover": "nyc npm run test-core",
    "report": "istanbul report",
    "transpile": "babel src -d lib",
    "build": "npm run cover",
    "lint": "eslint -c ./.eslintrc src/** --rule 'no-console: 2'",
    "publish": "npm run build"
  },
  "bin": {
    "glass": "./lib/cli/glass.js"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ],
    "files": [
      "tests/*",
      "tests/**/*"
    ],
    "source": [
      "src/*.js",
      "src/**/*.js"
    ],
    "concurrency": 8
  },
  "nyc": {
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95,
    "reporter": [
      "lcov",
      "json",
      "html",
      "text",
      "text-summary"
    ],
    "exclude": [
      "node_modules",
      "tests"
    ],
    "include": [
      "src/*.js",
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "all": true,
    "check-coverage": true
  },
  "glass": {
    "files": [
      "tests/fixtures/fixture-*jsx.js"
    ],
    "output": "tests/fixtures",
    "allowEmptyProps": true
  },
  "keywords": [],
  "author": "brekk",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-es2015-destructuring": "^6.9.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-preset-stage-2": "^6.13.0",
    "babel-register": "^6.11.6",
    "debug": "^2.2.0",
    "eslint": "^3.2.0",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-async": "^0.1.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-lodash-fp": "^2.0.0",
    "eslint-plugin-promise": "^2.0.0",
    "eslint-plugin-react": "^6.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "eslint-plugin-unicorn": "^1.0.0",
    "execa": "^0.4.0",
    "faucet": "0.0.1",
    "istanbul": "^0.4.4",
    "must": "^0.13.2",
    "nyc": "^7.1.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.13.0",
    "bluebird": "^3.4.6",
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "dargs": "^5.1.0",
    "data.task": "^3.1.0",
    "data.validation": "^1.3.1",
    "eslint-config-standard": "^5.3.5",
    "f-utility": "^1.0.5",
    "glob-watcher": "^3.0.0",
    "globby": "^6.0.0",
    "html2jade": "^0.8.4",
    "js-yaml": "^3.6.1",
    "lodash": "^4.14.1",
    "mkdirp-bluebird": "^1.0.1",
    "pkg-conf": "^1.1.3",
    "pkg-dir": "^1.0.0",
    "pug": "^2.0.0-beta4",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "read-pkg-up": "^1.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brekk/glass-menagerie.git"
  },
  "bugs": {
    "url": "https://github.com/brekk/glass-menagerie/issues"
  },
  "homepage": "https://github.com/brekk/glass-menagerie#readme"
}
